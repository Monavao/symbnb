{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Modification du mot de passe</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-12 align-items-stretch">
                <div class="alert alert-light">
                    {{ form_widget(form) }}
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Modifier</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
