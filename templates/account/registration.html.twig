{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mb-5">
        <h1 class="my-5 text-center">Inscrivez-vous</h1>
        {{ form_start(form) }}

        <div class="row">
            <div class="col-6 align-items-stretch">
                <div class="alert alert-light">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.pictureFile) }}
                </div>
            </div>
            <div class="col-6 align-items-stretch">
                <div class="alert alert-light">
                    {{ form_row(form.email) }}
                    {{ form_row(form.hash) }}
                    {{ form_row(form.passwordConfirm) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="alert alert-light">
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success w-50"><i class="fas fa-check"></i> S'inscrire</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
