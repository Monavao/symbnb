{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}
    <div class="ad-title" style="background-image:
    {% if ad.coverImage %}
        url({{ vich_uploader_asset(ad, 'coverFile')}})"
    {% else %}
        {{ asset('/images/empty.jpeg') }}"
    {% endif %}>
        <div class="container">
            <h1>{{ ad.title }}</h1>
            <p>{{ ad.introduction }}</p>
            <p class="h2">
                <strong>{{ ad.rooms }} chambres </strong>pour {{ ad.price }}€ par nuit
            </p>
            <a href="{{ path('booking_create', { "id": ad.id, "slug": ad.slug }) }}" class="btn btn-primary">Réserver</a>
            {% if app.user and app.user == ad.author %}
                <a href="{{ path('ads_edit', { "id": ad.id, "slug": ad.slug }) }}" class="btn btn-info">Modifier</a>
                <form method="post" action="{{ path('ads_delete', { "id": ad.id, "slug": ad.slug }) }}" style="display: inline-block;" onsubmit="return confirm(`Confirmez-vous la suppression de l'annonce {{ ad.title }} ?`)">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ad.slug) }}">
{#                    <input type="hidden" name="_method" value="DELETE">#}
                    <button class="btn btn-danger">Supprimer</button>
                </form>
            {% endif %}
        </div>
    </div>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-8 mb-3">
                {{ ad.content | raw }}

                <div id="carouselExampleIndicators" class="carousel slide mt-5" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% for image in ad.images  %}
                            <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for image in ad.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %} }}">
                            {% if image.url %}
                                <img src="{{ vich_uploader_asset(image, 'urlFile')}}" class="d-block w-100" alt="{{ image.caption }}">
                            {% else %}
                                <img src=" {{ asset('/images/empty.jpeg') }}" class="d-block w-100" alt="default">
                            {% endif %}

                            <div class="carousel-caption d-none d-md-block">
                                <p>{{ image.caption }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col ml-5">
                {% set a = ad.author %}
                <div class="row">
                    <div class="col-3">
                        <a href="{{ path('user_show', { 'slug': a.slug }) }}">
                            <img src="{{ vich_uploader_asset(a, 'pictureFile')}}" class="avatar avatar-medium d-block w-100" alt="avatar-{{ a.fullName }}">
                        </a>
                    </div>
                    <div class="col-9">
                        <a class="linkText" href="{{ path('user_show', { 'slug': a.slug }) }}">
                            <h3>{{ a.fullName }}</h3>
                        </a>
                        <span class="badge badge-primary">{{ a.ads | length}} annonces</span>
                    </div>
                </div>
                <br>
                {{ a.description | raw }}
            </div>
        </div>
    </div>
{% endblock %}
