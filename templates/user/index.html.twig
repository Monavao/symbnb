{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img class="avatar mt-2 mb-4" src="{{ vich_uploader_asset(user, 'pictureFile') }}" alt="avatar-{{ user.fullName }}">
                <br>
                <span class="badge badge-primary">{{ user.ads | length }} annonces</span>
            </div>
            <div class="col-9 mb-5">
                <h1 class="my-5">{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>
        </div>
        {{ user.description | raw }}
        <hr class="my-4">
        <h2 class="text-center mb-5">Les annonces de {{ user.fullName }}</h2>

        {% if user.ads | length > 0 %}
            <div class="row mt-5">
                {% for ad in user.ads %}
                    {% include 'ad/_ad.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning text-center">
                <p><strong>{{ user.fullName }}</strong> n'a pas encore d'annonce sur le site</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
