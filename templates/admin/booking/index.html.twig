{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Gestion des réservation</h1>
        <table class="table table-striped text-center align-content-center">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Client</th>
                <th>Annonce</th>
                <th>Durée</th>
                <th>Montant</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for booking in pagination.data %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                    <td>{{ booking.booker.fullName }}</td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.duration }}</td>
                    <td>{{ booking.amount }}€</td>
                    <td>
                        <a href="{{ path('admin_bookings_edit', { "id": booking.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <form class="mt-2" method="post" action="{{ path('admin_bookings_delete', { "id": booking.id }) }}" style="display: inline-block;" onsubmit="return confirm(`Confirmez-vous la suppression de la réservation {{ booking.id }} ?`)">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_booking' ~ booking.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display }}
    </div>
{% endblock %}
