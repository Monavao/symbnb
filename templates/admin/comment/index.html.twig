{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Gestion des commentaires</h1>
        <table class="table table-striped text-center align-content-center">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                    <td>{{ comment.author.fullName }}</td>
                    <td>{{ comment.content }}</td>
                    <td><span class="badge badge-dark rounded"><strong>{{ comment.rating }}</strong></span></td>
                    <td>{{ comment.ad.title }}</td>
                    <td>
                        <a href="{{ path('admin_comments_edit', {"id": comment.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <form class="mt-2" method="post" action="{{ path('admin_comments_delete', {"id": comment.id }) }}" style="display: inline-block;" onsubmit="return confirm(`Confirmez-vous la suppression du commentaire ?`)">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_comment' ~ comment.id) }}">
                            <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
