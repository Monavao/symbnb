{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'annonce {{ ad.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-5">Modification de l'annonce {{ ad.title }}</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h2 class="h4">Corriger l'annonce</h2>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}

                        <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Enregistrer les modifications</button>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h2 class="h4">Les réservations</h2>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Voyageur</th>
                                    <th>Date de réservation</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for booking in ad.bookings %}
                                <tr>
                                    <td>{{ booking.id }}</td>
                                    <td>{{ booking.booker.fullName }}</td>
                                    <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card bg-light mt-5">
                    <div class="card-header">
                        <h2 class="h4">Les commentaires</h2>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for commment in ad.comments %}
                                <tr>
                                    <td>{{ commment.id }}</td>
                                    <td>{{ commment.author.fullName }}</td>
                                    <td>{{ commment.rating }}</td>
                                    <td>{{ commment.content }}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary"><i class="fas fa-pen"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block _ad_images_widget %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_row %}
{#    {{ dump() }}#}
    <div id="block_{{ id }}">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block _ad_images_entry_widget %}
{#        {{ dump() }}#}
    <div class="row align-items-center">
        <div class="col-4">
            {% if value %}
                <img src="{{ vich_uploader_asset(value, 'urlFile')}}" class="img-fluid" alt="">
            {% else %}
                <img src="{{ asset('/images/empty.jpeg') }}" class="img-fluid" alt="default">
            {% endif %}
        </div>
        <div class="col-6">
            {{ form_row(form.caption) }}
        </div>
        <div class="col-2">
            <button type="button" class="btn btn-danger" data-action="delete" data-target="#block_{{ id }}">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('ad') }}
{% endblock %}
